<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="adoption">
        <environment id="adoption">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.mariadb.jdbc.Driver"/>
                <property name="url" value="jdbc:mariadb://localhost:3306/catdogshelter"/>
                <property name="username" value="root"/>
                <property name="password" value="mariadb"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
<!--        <mapper resource="com/backoven/domain/adoption/AdoptionMapper.xml"/>-->
        <package name="com.backoven.catdogshelter"/>
    </mappers>
</configuration>